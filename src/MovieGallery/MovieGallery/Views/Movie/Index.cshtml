@model MovieGallery.Models.Movie[]

@{
    ViewBag.Title = "Movie Gallery";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
            <h4 class="text-center">
                @Html.ActionLink(@movie.MovieTitle, "Detail", new { id = movie.Id })
            </h4>
            <a href="@Url.Action("Detail", new { id = movie.Id })">
                <img src="/Images/@movie.CoverMovieFileName"
                     alt="@movie.DisplayText"
                     class="img-responsive">
            </a>
        </div>
    }
</div>